        {
            "name": "Debug FastAPI (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "program": "app.py",
            "justMyCode": true,
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "RUN FastAPI (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            // Use 'python -m uvicorn' to launch the server as a module
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload"
            ],
            // Stop the server when debugging ends
            "justMyCode": true,
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}